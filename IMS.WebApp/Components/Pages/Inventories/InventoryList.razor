@page "/inventories"

<h3>Inventory List</h3>
<br/>
<br />
<EditForm Model="inventoryNameToSearch" FormName="formSearchInv">
    <div class="input-group">
        <InputText
            class="form-control"
            placeholder="Type inventory name here to search"
            @bind-Value="this.inventoryNameToSearch">
        </InputText>
        <button type="submit" class="btn-success input-group-text">Search</button>
    </div>
</EditForm>
<br/>

<InventoryListComponent SearchInventoryFilter="@inventoryNameToSearch"></InventoryListComponent>
<br/>
<a href="/addinventory" class="btn btn-primary">Add Inventory</a>

@code {
    
    [SupplyParameterFromForm]
    private string inventoryNameToSearch { get; set; } = string.Empty;

}
